---
apiVersion: storage.k8s.io/v1
kind: StorageClass
metadata:
  name: cephfs
provisioner: ceph.com/cephfs
reclaimPolicy: Delete
parameters:
  cluster: ceph
  monitors: 192.168.10.10:6789
  adminId: admin
  adminSecretName: cephfs-provisioner
  adminSecretNamespace: cephfs-provisioner
  claimRoot: /volumes
  deterministicNames: "true"
